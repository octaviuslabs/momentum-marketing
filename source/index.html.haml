                %input#mce-EMAIL{:name => "EMAIL", :placeholder => "glengarry@mitchandmurry.com", :type => "email", :value => ""}/
                %input#mce-PLAN{:name => "PLAN", :type => "hidden", :value => "none"}/
                %input{:type => "submit", :value => "Get Started"}/
            .message

